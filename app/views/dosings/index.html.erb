<h1>Listing dosings</h1>

<table class="tablesorter">
  <thead>
    <tr>
      <th>Attack</th>
      <th>Drug</th>
      <th>Dosed at</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @dosings.each do |dosing| %>
      <tr>
        <td class='cells'><%= Attack.find(dosing.attack_id).started_at.to_s.sub(" UTC", "") %></td>
        <td class='cells'><%= dosing.dosed_at.to_s.sub(" UTC", "") %></td>
        <td class='cells'><%= Drug.find(dosing.drug_id).name %></td>
        <td class='cells'><%= link_to 'Edit', edit_dosing_path(dosing) %></td>
        <td class='cells'><%= link_to 'Destroy', dosing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dosing', new_dosing_path %>
