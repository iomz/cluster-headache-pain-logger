<h1>Listing attacks</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Started at</th>
      <th>Ended at</th>
      <th>Pain level</th>
      <th>Comment</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @attacks.each do |attack| %>
      <tr>
        <td><%= attack.user_id %></td>
        <td><%= attack.started_at %></td>
        <td><%= attack.ended_at %></td>
        <td><%= attack.pain_level %></td>
        <td><%= attack.comment %></td>
        <td><%= link_to 'Show', attack %></td>
        <td><%= link_to 'Edit', edit_attack_path(attack) %></td>
        <td><%= link_to 'Destroy', attack, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attack', new_attack_path %>
